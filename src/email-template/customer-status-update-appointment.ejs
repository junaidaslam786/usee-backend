<%- include('layout/header.ejs', { subject: "Usee-360 Appointment" }) %>

<tr>
    <td valign="top" style="color:#947a8c;text-align:center;font-size:20px;font-family:'Manrope', sans-serif;font-weight:700;background-color:#fff;padding:0 20px 10px;">
        <span>Welcome to Usee-360</span>
    </td>
</tr>

<tr>
    <td valign="top" style="color:#3e2837;text-align:center;font-size:16px;font-family:'Manrope', sans-serif;font-weight:500;background-color:#fff;padding:0 20px 30px;">
        <span> <%= customer %> has marked this booking as <%= appointmentStatus %>.</span>
    </td>
</tr>

<tr>
    <td valign="top" style="text-align:center;background-color:#fff;padding:20px 20px 20px;">
        <span style="color:#3e2837;font-size: 18px;font-family:'Manrope', sans-serif;font-weight:700;">
            <b>Your Booking Information:</b>
        </span>
    </td>
</tr>
<tr>
    <td valign="top" style="text-align:center;background-color:#fff;padding: 0 40px 30px 40px;">
        <table style="width:100%;" border="0" cellspacing="0" cellpadding="0">
            <tr>
                <td valign="middle" style="width:130px;padding-right:30px;">
                    <span style="box-shadow:0 0 21px #999;border:1px solid #00CB04;display:inline-block;width:112px;height:112px;border-radius:50%;overflow:hidden;">
                        <img style="max-width:100%;" src="<%= appUrl %>/<%= customerImage %>" alt="customer photo">
                    </span>
                </td>
                <td valign="middle">
                    <table border="0" cellspacing="0" cellpadding="0">
                        <tr>
                            <td valign="middle"><img src="<%= appUrl %>/calender.png" alt="icon" style="margin-right:10px;"></td>
                            <td valign="middle">
                                <span style="color:#3E2837;font-size: 14.5px;font-family:'Manrope', sans-serif;font-weight:600;padding-right:30px;">
                                    <%= date %>
                                </span>
                            </td>
                            <td valign="middle"><img src="<%= appUrl %>/clock.png" alt="icon" style="margin-right:10px;"></td>
                            <td valign="middle">
                                <span style="color:#3E2837;font-size: 14.5px;font-family:'Manrope', sans-serif;font-weight:600;">
                                    <%= time %>
                                </span>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>
    </td>
</tr>
 <tr>
    <td valign="top" style="text-align:center;background-color:#fff;padding:0 50px;">
        <table border="0" cellpadding="0" cellspacing="0" style="width:100%;">
            <% for(let i = 0; i < products.length; i++) { %>
                <tr>
                    <td valign="middle" style="width:132px;padding: 0 20px 15px 0;">
                        <span style="box-shadow:0 0 21px rgba(110, 110, 110, 0.29);display:inline-block;overflow:hidden;border:1px solid #1fcf23;border-radius:15px;">
                            <img src="<%= appUrl %>/<%= products[i].featuredImage %>" width="143" alt="image" style="display:block;">
                        </span>
                    </td>
                    <td valign="middle" style="text-align:left;padding: 0 0 15px 0;">
                        <span style="display:block;color:#432e3c;font-size:16px;font-family:'Manrope', sans-serif;font-weight:700;padding-bottom:10px;">
                        <%= products[i].title %>
                        </span>

                    <span style="display:block;color:#432e3c;font-size:14px;font-family:'Manrope', sans-serif;font-weight:500;">
                            <%= products[i].address %>, <%= products[i].city %> <br/> <%= products[i].region %>
                        </span>
                    </td>
                </tr>
            <% } %>
        </table>
    </td>
</tr>
<tr>
    <td valign="top" style="text-align:center;background-color:#fff;padding:0 20px 20px;">
        <span style="display: inline-block;max-width:380px;color:#92778a;font-size: 14px;font-family:'Manrope', sans-serif;font-weight:500;">
            If you have question or concerns regarding this appointment, please contact
            <span style="color:#3e2837;"> <%= customer %> </span>
            on the below details:
        </span>
    </td>
</tr>
<tr>
    <td valign="top" style="text-align:center;background-color:#fff;padding:0 20px 40px;">
        <span>
            <a href="tel:<%= customerPhoneNumber %>" target="_blank" style="text-decoration:none;color:#3e2837;font-size:14px;font-family:'Manrope', sans-serif;font-weight:600;">
                <img src="<%= appUrl %>/phone.png" style="display:inline-block;vertical-align:middle;margin-right:6px" alt="icon">
              <%= customerPhoneNumber %>
            </a>
        </span>

        <span style="margin-left:40px;">
            <a href="mailto:<%= customerEmail %>" target="_blank" style="text-decoration:none;color:#3e2837;font-size:14px;font-family:'Manrope', sans-serif;font-weight:600;">
                <img src="<%= appUrl %>/email.png" style="display:inline-block;vertical-align:middle;margin-right:6px" alt="icon">
              <%= customerEmail %>
            </a>
        </span>
    </td>
</tr>

<%- include('layout/footer.ejs') %>