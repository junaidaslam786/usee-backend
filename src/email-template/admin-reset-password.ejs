<%- include('layout/header.ejs', { subject: "Reset Password" }) %>

<tr>
    <td valign="top" style="text-align:center;background-color:#fff;padding:0 20px 20px;">
        <span style="color:#3e2837;font-size: 22px;font-family:'Manrope', sans-serif;font-weight:700;">
            <b> Reset Password </b>
        </span>
    </td>
</tr>
<tr>
    <td valign="top" style="color:#92778a;text-align:center;font-size:16px;font-family:'Manrope', sans-serif;font-weight:500;background-color:#fff;padding:0 30px;">
        <p>Hello <%=name%>,</p>
        <p>This is a confirmation that the password for your account <b><%= email %></b> has just been changed.</p>
        <p>Log into your account using below link.</p>
    </td>
</tr>
<tr>
    <td valign="top" style="padding-top:30px;text-align:center;background-color:#fff;">
        <span>
            <a target="_blank" href="<%= loginLink %>" style="border-radius:50px;text-decoration:none;font-size:14px;font-family:'Manrope', sans-serif;background-color:#00CB04;padding:12px 50px;display:inline-block;color:#fff;">
                <b>Login</b>
            </a>
        </span>
    </td>
</tr>

<%- include('layout/footer.ejs') %>